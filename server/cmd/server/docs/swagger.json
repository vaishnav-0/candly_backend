            "get": {
                "description": "get the details of all the pools",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "pool"
                ],
                "summary": "Get pools",
                "operationId": "get-pools",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/market.PoolData"
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        }
